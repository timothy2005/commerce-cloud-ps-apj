{
    "name": "cms-backend-mock",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "start": "nest start",
        "startSwaggerDebug": "DEBUG=swagger-tools:middleware:* concurrently npm:start:mock",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:mock": "nest start",
        "prepare-contract-testing": "node ./scripts/prepareContractTesting.js",
        "contract-testing": "npm run prepare-contract-testing && npm run test-mock-generate && npm run e2e:mock",
        "test-mock-generate": "rimraf ./tests/unit/* && node ./scripts/generateUnitTests.js",
        "e2e:mock": "rimraf ./tests/reports/* && start-server-and-test start http://localhost:3333 contract-unit-test",
        "contract-unit-test": "mocha ./tests/unit/* --reporter mocha-multi-reporters --reporter-options configFile=config.json",
        "lint": "npm run lint:base -- 'src/**/*.ts'",
        "lint:base": "eslint"
    },
    "dependencies": {
        "@nestjs/common": "7.6.15",
        "@nestjs/core": "7.6.15",
        "@nestjs/platform-express": "7.6.15",
        "@types/swagger-tools": "0.10.6",
        "cors": "2.8.5",
        "fs-extra": "9.0.0",
        "lodash": "4.17.21",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.4",
        "swagger-tools": "0.10.4",
        "tslib": "1.10.0",
        "minimist": "1.2.5"
    },
    "devDependencies": {
        "@nestjs/cli": "7.6.0",
        "@nestjs/schematics": "7.3.1",
        "@nestjs/testing": "7.6.15",
        "@types/node": "14.11.2",
        "@types/supertest": "2.0.8",
        "@types/lodash": "4.14.159",
        "chakram": "1.5.0",
        "concurrently": "5.1.0",
        "mocha": "7.1.1",
        "mocha-junit-reporter": "1.23.3",
        "mocha-multi-reporters": "1.1.7",
        "mochawesome": "4.1.0",
        "mochawesome-report-generator": "4.1.0",
        "oatts": "1.6.0",
        "rimraf": "3.0.2",
        "start-server-and-test": "1.10.11",
        "supertest": "4.0.2",
        "ts-loader": "7.0.4",
        "ts-node": "8.10.1",
        "tsconfig-paths": "3.9.0",
        "eslint": "7.9.0",
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.1.1",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jsdoc": "30.5.1",
        "eslint-plugin-prefer-arrow": "1.2.2",
        "eslint-plugin-deprecation": "1.1.0",
        "eslint-plugin-ban": "1.5.1",
        "eslint-plugin-prettier": "3.1.4",
        "typescript": "3.9.3",
        "smartedit-build": "0.0.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
