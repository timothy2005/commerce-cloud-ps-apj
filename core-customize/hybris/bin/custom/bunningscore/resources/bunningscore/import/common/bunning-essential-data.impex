$deliveryCountries = AU, NZ
$billingCountries = AU, NZ
$orderProcessCode = order-process
$pickupInStoreMode = BUY_AND_COLLECT
$customerAllowedToIgnoreSuggestions = true
$paymentProvider = Mockup
$checkoutFlowGroup = defaultCheckoutGroup


# Product Unit
INSERT_UPDATE UNIT; code[unique = true]; name           ; unitType   ; conversion
                  ; TON                ; Tonne          ; TON        ; 1
                  ; M2                 ; Square Metre   ; M2         ; 1
                  ; PLT                ; Pallet     	; PLT        ; 1
                  ; PCK                ; Pack       	; PCK        ; 1
                  ; MTR                ; Metre          ; MTR        ; 1
                  ; KG                 ; Kilogram       ; KG         ; 1
                  ; M3                 ; Cubic Metre    ; M3         ; 1
                  ; each               ; each           ; each       ; 1
                  ; L/M                ; 1 Linear Metre ; L/M        ; 1
                  ; LEN                ; 1 Length       ; LEN        ; 1
                  ; pieces             ; Pieces         ; Pieces     ; 1
                  ; G                  ; Grams          ; G          ; 1
                  ; EA                 ; EA             ; EA         ; 1
                  ; MM                 ; mm             ; mm         ; 1
                  ; Yes/No             ; Yes/No         ; Yes/No     ; 1
                  ; CTN                ; Carton     	; CTN		 ; 1
                  ; SQM                ; Square Metre   ; SQM        ; 1
                  ; ROL                ; ROL            ; ROL        ; 1


# Vendor
INSERT_UPDATE Vendor; code[unique = true]; name
                    ; default            ; Default Vendor

$passwordEncoding = md5
