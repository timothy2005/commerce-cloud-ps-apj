INSERT_UPDATE ServicelayerJob; code[unique = true]    ; springId[unique = true];
                             ; orderRetryCosCronJob   ; orderRetryCosCronJob   ;
                             ; enquiryRetryCosCronJob ; enquiryRetryCosCronJob ;

INSERT_UPDATE OrderRetryCosCronJob; code[unique = true]    ; job(code)              ; sessionLanguage(isoCode)[default = en]; nodeGroup   ; count; queryCount
                                  ; orderRetryCosCronJob   ; orderRetryCosCronJob   ;                                       ; integration ; 3    ; 1000
                                  ; enquiryRetryCosCronJob ; enquiryRetryCosCronJob ;                                       ; integration ; 3    ; 1000

INSERT_UPDATE Trigger; cronJob(code)[unique = true]; cronExpression  ; active
                     ; orderRetryCosCronJob        ; 0 0 * ? * * * ; false
                     ; enquiryRetryCosCronJob      ; 0 0 * ? * * * ; true

UPDATE DistanceUnit; code[unique = true]; name[lang = en_AU]
