{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "node_modules/smartedit-build/test/@types"],
        "paths": {
            "testhelpers": ["node_modules/smartedit-build/test/unit"],
            "testhelpers/*": ["node_modules/smartedit-build/test/unit/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "node_modules/smartedit-build/test/unit/**/*",
        "node_modules/smartedit-build/test/@types/**/*",
        "node_modules/@types/**/*"
    ]
}
